<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@drawable/background"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnSinglePlayer"
            android:layout_width="205dp"
            android:layout_height="80dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#f37221"
            android:fontFamily="@font/dayslater"
            android:text="Single Player"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toTopOf="@+id/btnMultiplayerOffline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#261E1C"
            app:strokeWidth="5dp" />

        <Button
            android:id="@+id/btnMultiplayerOffline"
            android:layout_width="205dp"
            android:layout_height="80dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/dayslater"
            android:text="MultiPlayer offline"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnMultiplayerOnline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#000000"
            android:backgroundTint="#f37221"
            app:cornerRadius="50dp"
            app:strokeColor="#261E1C"
            app:strokeWidth="5dp"
            />

        <Button
            android:id="@+id/btnMultiplayerOnline"
            android:layout_width="205dp"
            android:layout_height="80dp"
            android:layout_marginBottom="70dp"
            android:fontFamily="@font/dayslater"
            android:text="multiplayer online"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#000000"
            android:backgroundTint="#f37221"
            app:cornerRadius="50dp"
            app:strokeColor="#261E1C"
            app:strokeWidth="5dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="363dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/dayslater"
            android:text="TIC TAC TOE"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@+id/btnSinglePlayer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.459">
        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>